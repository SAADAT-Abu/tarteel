# Copy this to .env and fill in your values for local development.

# ── Database ──────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://tarteel:password@localhost:5432/tarteel

# ── Redis ─────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── JWT (generate: python -c "import secrets; print(secrets.token_hex(64))") ──
JWT_SECRET_KEY=REPLACE_WITH_RANDOM_64_CHAR_HEX
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# ── Admin API key (generate: python -c "import secrets; print(secrets.token_hex(32))") ──
ADMIN_API_KEY=REPLACE_WITH_RANDOM_32_CHAR_HEX

# ── Cookies ───────────────────────────────────────────────────────────
COOKIE_SECURE=false

# ── App URLs ──────────────────────────────────────────────────────────
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
HLS_SERVE_URL=http://localhost:8000

# ── Audio ─────────────────────────────────────────────────────────────
AUDIO_DIR=./audio
HLS_OUTPUT_DIR=./hls
DEFAULT_RECITER=Alafasy_128kbps

# ── Ramadan ───────────────────────────────────────────────────────────
RAMADAN_START_DATE=2026-02-18
RAMADAN_TOTAL_NIGHTS=30

# ── Email — Brevo SMTP (easiest for testing, free tier available) ──────
BREVO_SMTP_USER=your_brevo_login@example.com
BREVO_SMTP_KEY=your_brevo_smtp_key

# ── Email — SendGrid (alternative) ───────────────────────────────────
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@tarteel.live

# ── Email — Gmail SMTP (alternative) ──────────────────────────────────
GMAIL_USER=
GMAIL_APP_PASSWORD=

# ── WhatsApp — Twilio (optional) ──────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ── Geocoding — OpenCage (optional, falls back to Nominatim) ──────────
OPENCAGE_API_KEY=

# ── Frontend ──────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=http://localhost:8000
